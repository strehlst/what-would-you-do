!!! 5
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{'http-equiv': 'X-UA-Compatible', content:'IE=edge'}
    %meta{name: 'viewport', content: 'width=device-width', 'initial-scale': '1'}
    =csrf_meta_tags

    = stylesheet_link_tag     'normalize', media: 'all'
    = stylesheet_link_tag     'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag  'application', 'data-turbolinks-track': 'reload'

    %title What would you do if your income were taken care of?
  %body
    %nav{class: 'navbar fixed-top navbar-expand-md navbar-mge navbar-mge-warm', role: 'navigation'}
      %a{class: 'navbar-brand d-none d-sm-block', href: '#'}
        What would you do if your income were taken care of?
      %a{class: 'navbar-brand navbar-mobile-brand d-sm-none', href: '#'}
        %strong What would you do
        if your income were taken care of?
      %button{class: 'navbar-toggler', 'data-target': '.navbar-collapse', 'data-toggle': 'collapse', type: 'button'}
        â˜°
      .collapse.navbar-collapse
        %ul.navbar-nav.ml-auto
          - [['Start', root_path]].each_with_index do | item, index |
            %li.nav-item{class: index==0?'active':''}
              = link_to(item[0], item[1], class: 'nav-link')
          %li.nav-item
            - if user_signed_in?
              = link_to('Logout', destroy_user_session_path, method: :delete, class: 'nav-link')
            - else
              = link_to('Login', new_user_session_path, class: 'nav-link')
    - if notice
      %p#notice.notice.notice-info= notice
    - if alert
      %p#alert.alert.alert-warning= alert

    = yield
