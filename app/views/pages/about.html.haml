      %p= t('pages.about.support')
      %h3.h5.mt-5= t('pages.about.how_can_i_help')
      %ul
        %li= t('pages.about.come_to_check_ins_html', url: pages_calendar_path)
        %li= t('pages.about.join_facebook_group_html', url: ENV['FACEBOOK_GROUP_URL'])
        %li= t('pages.contact.via_email_html', email: ENV['CONTACT_EMAIL_ADDRESS'])
      %p.pt-5
      = render 'dreams/form', title: t('main.variations.and_you_what_would_you_do'), dream: Dream.new
