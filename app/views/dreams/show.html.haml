%section.container-fluid
  .row
    .col-lg-12
      = render 'dreams/dream', dream: @dream

    .col-lg-12.text-center
      %br
      = link_to t('main.variations.a_number_of_people_would_do_a_number_of_things', users_count: @users_count, dreams_count: @dreams_count), dreams_path, class: 'btn btn-link'
      %hr

%section.container-fluid
  .row
    .col-md-6.offset-md-3
      - if user_signed_in?
        = render 'dreams/form', dream: @new_dream, title: t('main.variations.what_else_would_you_do')
      - else
        = render 'shared/login_or_register', after_sign_in_path: nil
