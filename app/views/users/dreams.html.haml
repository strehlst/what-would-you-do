%section.container-fluid
  .row
    .col-lg-12
      -if current_user.embraces.count > 0
        %h1= t('main.variations.i_would')
  .row
    = render 'dreams/dream_grid', dreams: @dreams
    -if current_user.embraces.count > 0
      = render 'dreams/dream_grid_form', new_dream: @new_dream, title: t('main.variations.what_else_would_you_do')
    -else
      = render 'dreams/dream_grid_form', new_dream: @new_dream, title: t('main.partials.what_would_you_do') + ' ' + t('main.partials.if_your_income_were_taken_care_of')
