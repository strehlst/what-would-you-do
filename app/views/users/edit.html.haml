%section.container-fluid
  .row
    .col-xs-12.col-md-2
      = image_tag quadratic_image_path(current_user.avatar_url, 400), class: 'img-fluid rounded-circle'
      //%p
      //  = link_to 'Your public profile looks like this, %Name%', user_path(current_user), target: '_blank'
    .col-xs-12.offset-md-1.col-md-5
      .row.form-wrapper.mb-5
        .col-xs-12.col-lg-12
          %h2= t('dictionary.actions.edit_user_information')
          = render 'form'
          %br
          = link_to 'Modificar ou cancelar registo', edit_user_registration_path, class: 'btn btn-link'
          %br
          %br
          %h2= t('dictionary.actions.update_user_avatar')
          = render 'avatar_upload_form'
          -if @user.avatar_path
            %br
            %h2= t('dictionary.actions.delete_user_avatar')
            = render 'avatar_delete_form'
