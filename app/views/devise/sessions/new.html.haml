%section.container-fluid
  .row.form-wrapper.narrow-centered
    .col-lg-12
      %h1= t('dictionary.actions.log_in')
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group
          .field
            = f.email_field :email, placeholder: :email, autofocus: true, autocomplete: 'email', class: 'form-control'
            = f.label :email, t('devise.dictionary.email')
        .form-group
          .field
            = f.password_field :password, placeholder: :password,autocomplete: 'off', class: 'form-control'
            = f.label :password, t('devise.dictionary.password')
        - if devise_mapping.rememberable?
          .form-group
            .field
              = f.check_box :remember_me
              = f.label :remember_me
        .actions
          = f.submit t('dictionary.actions.log_in'), class: 'btn btn-primary form-control'

= render 'devise/shared/links'
