%section.container-fluid
  .row.form-wrapper.narrow-centered
    .col-lg-12
      %h1 Change your password
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        .form-group
          .field
            = f.password_field :password, placeholder: :password, autofocus: true, autocomplete: 'off', class: 'form-control'
            = f.label :password, t('devise.dictionary.new_password')
        .form-group
          .field
            = f.password_field :password_confirmation, placeholder: :password_confirmation, autocomplete: 'off', class: 'form-control'
            = f.label :password_confirmation, t('devise.dictionary.password_confirmation')
        .actions
          = f.submit 'Change my password', class: 'btn btn-primary form-control'
      = render 'devise/shared/links'
